pipeline{

    agent{

        label 'master'

    }

    tools{

        maven 'Maven'

        jdk 'MyJava'

    }

    stages{

        stage('Code Validation)

        {

            steps{



                sh """

                echo "Perform Validation"

                mvn validate

                """

            }

        }

        stage('Code Compliation')

        {

            steps{



                sh """

                echo "Perform Compliation"

                mvn compile

                """

        }

        }

        stage('Code Test')

        {

            steps{



                sh """

                echo "To Test the Code"

                mvn test

                """

        }

        }

        stage('Code Package')

        {

            steps{



                sh """

                echo "Create a package"

                mvn compile

                """

        }

        }

        stage('Code Verify')

        {

            steps{



                sh """

                echo "Verify the Code"

                mvn compile

                """

        }

        }

    }

}
